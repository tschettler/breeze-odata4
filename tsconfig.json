{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./lib",
    "baseUrl": "",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "target": "es5",
    "lib": [
      "es2016",
      "dom"
    ],
    "typeRoots": [
      "typings"
    ],
    "types": [
      "breeze-client"
    ]
  },
  "include": [
    "src/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}